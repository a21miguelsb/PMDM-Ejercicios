<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoutineInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/routine_info_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/routine_day_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15dp"
            android:textStyle="italic"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Ejericico"
                android:textSize="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_repetitions"
                android:textSize="15dp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/cronometro" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exercices1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercice_name1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_reps1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_time1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"


                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exercices2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercice_name2"
                android:layout_width="250dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_reps2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_time2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exercices3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercice_name3"
                android:layout_width="250dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_reps3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_time3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exercices4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercice_name4"
                android:layout_width="250dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_reps4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_time4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_exercices5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exercice_name5"
                android:layout_width="250dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_reps5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"


                />

            <TextView
                android:id="@+id/exercice_time5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"

                />

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Eliminar"
            >
        </Button>
    </LinearLayout>


</LinearLayout>